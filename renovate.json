{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:allNonMajor"],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "timezone": "America/Montreal",
  "schedule": ["before 9am on monday"],
  "prHourlyLimit": 3,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Astro ecosystem",
      "matchPackagePatterns": ["^astro", "^@astrojs/"],
      "groupName": "astro ecosystem",
      "labels": ["dependencies", "astro"]
    },
    {
      "description": "Tailwind ecosystem",
      "matchPackagePatterns": ["^tailwindcss", "^@tailwindcss/"],
      "groupName": "tailwind ecosystem",
      "labels": ["dependencies", "tailwind"]
    },
    {
      "description": "ESLint plugins and configs",
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"],
      "groupName": "eslint ecosystem",
      "labels": ["dependencies", "eslint"]
    },
    {
      "description": "Prettier plugins",
      "matchPackagePatterns": ["^prettier"],
      "groupName": "prettier ecosystem",
      "labels": ["dependencies", "prettier"]
    },
    {
      "description": "TypeScript",
      "matchPackagePatterns": ["^typescript"],
      "groupName": "typescript",
      "labels": ["dependencies", "typescript"]
    },
    {
      "description": "Shiki (syntax highlighting)",
      "matchPackagePatterns": ["^shiki", "^@shikijs/"],
      "groupName": "shiki ecosystem",
      "labels": ["dependencies"]
    },
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Automerge minor for devDependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
